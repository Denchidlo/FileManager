<Window x:Class="FileManager.Windows.RenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager.Windows"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=NewName}"
        Title="RenameWindow" Height="180" Width="320">
    <Grid>
        <Label Content="New file name" HorizontalContentAlignment="Center" Height="25" Margin="77,15,76.6,90.4"/>
        <TextBox x:Name="NewName" Width="140" Height="25" Margin="72,40,71.6,55.8"/>
        <Button x:Name="okButton" Click="OkButton_Click" IsDefault="True" Height="25" Margin="77,91,163.6,14.4" Content="OK"/>
        <Button x:Name="cancelButton" IsCancel="True" Width="55" Height="25" Content="Cancel" Margin="162,91,76.6,14.4" />
    </Grid>
</Window>
