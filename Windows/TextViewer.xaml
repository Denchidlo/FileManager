<Window x:Class="FileManager.Windows.TextViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager.Windows"
        mc:Ignorable="d"
        Title="Text viewer" Height="450" Width="800" 
        >
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" Height="Auto" Margin="0,41,-0.4,10">
            <TextBlock Name="Content_" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="359" Width="774"/>
        </ScrollViewer>
        <Label Content="File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBlock Name="Path" HorizontalAlignment="Left" Margin="67,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="275"/>
    </Grid>
</Window>
